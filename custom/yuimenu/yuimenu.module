  $yui_source = variable_get('yui_source','http://yui.yahooapis.com/2.5.0');
  // the order of script and style sheet is important. Don't change.
  //yui_add_js('menu', $yui_source, '/build/yahoo-dom-event/yahoo-dom-event.js');
