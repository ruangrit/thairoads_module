/*
 * when menu has a " or ' the script is fails. So replace them.
 */
function rep_char ($inStr) {
  $fromChar= array("\"","\\");
  $toChar  = array("'","-");
  $outStr = str_replace($fromChar, $toChar, $inStr);
  return ($outStr);
  //return t($inStr);
}

function html_menu($menu_id = 'navigation:0') {
  switch (variable_get('yuimenu_type','tns')) {
    case 'tns' :
      $output =  get_html_menu_script($menu_id);
      break;
    case 'lns' :
      $output =  get_html_menu_script($menu_id);
      break;
    case 'tnm' :
      $output =  get_html_menu_markup($menu_id);
      break;

  }
  return $output;
}

function get_html_menu_script ($menu_id) {
  $output .='
            <!-- YUI Menu div-->
            <div id="productsandservices" class="'. (("tns" == variable_get('yuimenu_type','tns') || "tnm"==variable_get('yuimenu_type','tns'))? "yuimenubar yuimenubarnav":"yuimenu") .'">
              <div class="bd 1">
                <ul  style="text-decoration:none" class="first-of-type">';
  $menu = load_menu($menu_id);
  foreach ($menu as $menu_item) {
    $mlid = $menu_item['link']['mlid'];
    if ($menu_item['link']['hidden'] == 0) {
      if ("tns" == variable_get('yuimenu_type', 'tns') || "tnm" == variable_get('yuimenu_type', 'tns')) {
        $class = 'yuimenubaritem';
        $link_class = 'yuimenubaritemlabel';
      }
      else {
        $class = 'yuimenuitem';
        $link_class = 'yuimenuitemlabel';
      }

      $options['attributes']['class'] = $link_class;

      $current_path = drupal_get_path_alias($_GET['q']);
      if (strpos($current_path, drupal_get_path_alias($menu_item['link']['href']).'/') !== FALSE) {
        if (isset($options['attributes']['class'])) {
          $options['attributes']['class'] .= ' active';
        }
        else {
          $options['attributes']['class'] = 'active';
        }
      }

      $output .= '<li  class="'. $class .'">';
      $output .= l($menu_item['link']['title'], $menu_item['link']['href'], $options);
      $output .= '</li>';
    }
  }
  $output .='</ul>
          </div>
       </div>';
  return $output;
}

function script_menu($menu_id) {
  $menu = load_menu($menu_id);
  
  $i=0;
  foreach ($menu as $menu_item) {
    $mlid = $menu_item['link']['mlid'];
    if ($menu_item['link']['hidden'] == 0) {
      if ($menu_item['link']['has_children'] != 0)
      {
        $output .= 'this.getItem('. $i .').cfg.setProperty("submenu", oSubmenuData['.$i.']);'."\n";
      }
      $i++;
    }
  }

  return $output;
}

